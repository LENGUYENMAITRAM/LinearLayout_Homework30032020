<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="1"
            android:textColor="#131313"
            android:background="#A4DC64"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:text="3"
                android:textColor="#131313"
                android:background="#f20"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:text="4"
                android:textColor="#131313"
                android:background="#CF7393"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="2"
            android:textColor="#131313"
            android:background="#EDE7B0"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="4"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:text="5"
                    android:textColor="#131313"
                    android:background="#03A9F4"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <TextView
                    android:text="6"
                    android:textColor="#131313"
                    android:background="#9E40AE"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:text="7"
                android:textColor="#131313"
                android:background="#A50F6C"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:text="8"
                android:textColor="#131313"
                android:background="#F8BF6A"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:text="9"
                android:textColor="#131313"
                android:background="#D3C5EC"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>